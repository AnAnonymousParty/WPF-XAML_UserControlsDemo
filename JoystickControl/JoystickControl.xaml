<!-- See code behind for list of dependency properties. -->

<UserControl d:DesignHeight="100" 
			          d:DesignWidth="100"
			          mc:Ignorable="d"
			          x:Class="JoystickControl.Joystick"
             x:Name="JoyStickCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 
    <Viewbox DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"             
             Stretch="Uniform"
             x:Name="baseViewbox">
  
        <Grid Background="Transparent">

            <!-- Joystick 'base'. -->
            <Canvas Height="{Binding Path=JoystickControlHeight}" 
                    Margin="0" 
                    Width="{Binding Path=JoystickControlWidth}" 
                    x:Name="baseCanvas">
            
                <!-- Outer ring. -->
                <Ellipse Height="{Binding Path=JoystickControlHeight}"
                         HorizontalAlignment="Left" 				                      
				                     VerticalAlignment="Top" 
				                     Width="{Binding Path=JoystickControlWidth}">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF2C2A2A" Offset="1" />
                            <GradientStop Color="#FF3A3737" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Inner circle. -->
                <Ellipse Canvas.Left="{Binding Path=InnerCircleLeft}" 
				                     Canvas.Top="{Binding Path=InnerCircleTop}"
                         Height="{Binding Path=InnerCircleHeight}"
                         HorizontalAlignment="Left" 				                      
				                     VerticalAlignment="Top" 
				                     Width="{Binding Path=InnerCircleWidth}">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF0E0E0E" Offset="1" />
                            <GradientStop Color="#FF1D1D1D" />
                            <GradientStop Color="#FF323030" Offset="0.453" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- The 'arrows'. -->
                <!-- UP -->
                <Path Canvas.Left="{Binding Path=TopArrowLeft}"
                      Canvas.Top="{Binding Path=TopArrowTop}"
                      Data="M0,  20 
                            L30, 0 
                            L60, 20 z" 
					                 Fill="{Binding Path=ArrowBrush}" 					                  
					                 Height="{Binding Path=ArrowHeight}"
                      HorizontalAlignment="Left"
					                 Stretch="Fill" 
					                 UseLayoutRounding="False" 
					                 VerticalAlignment="Top" 
					                 Width="{Binding Path=ArrowWidth}"  					                 
                      x:Name="UPArrow"/>
            
                <!-- DOWN -->
                <Path Canvas.Left="{Binding Path=BottomArrowLeft}" 
                      Canvas.Top="{Binding Path=BottomArrowTop}"
                      Data="M0,  20 
                            L30, 0 
                            L60, 20 z" 
					                 Fill="{Binding Path=ArrowBrush}" 					                 
					                 Height="{Binding Path=ArrowHeight}" 
                      HorizontalAlignment="Left"
                      RenderTransformOrigin="0.5,0.5"
					                 Stretch="Fill" 
					                 UseLayoutRounding="False" 
					                 VerticalAlignment="Top" 
					                 Width="{Binding Path=ArrowWidth}"					                   					                   
                      x:Name="DownArrow">
                    <Path.RenderTransform>
                        <ScaleTransform ScaleY="-1" />
                    </Path.RenderTransform>
                </Path>
            
                <!-- RIGHT -->
                <Path Canvas.Left="{Binding Path=RightArrowLeft}" 
                      Canvas.Top="{Binding Path=RightArrowTop}"
                      Data="M0,  20 
                            L30, 0 
                            L60, 20 z" 
					                 Fill="{Binding Path=ArrowBrush}" 
					                 Height="{Binding Path=ArrowHeight}" 
                      HorizontalAlignment="Left" 
                      RenderTransformOrigin="0.5,0.5"
					                 Stretch="Fill" 
					                 UseLayoutRounding="False" 
					                 VerticalAlignment="Top" 
					                 Width="{Binding Path=ArrowWidth}"					                    					                   
                      x:Name="RightArrow">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1" ScaleX="-1" />
                            <RotateTransform Angle="-90" />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
                
                <!-- LEFT -->
                <Path Canvas.Left="{Binding Path=LeftArrowLeft}"
					                 Canvas.Top="{Binding Path=LeftArrowTop}"
                      Data="M0,  20 
                            L30, 0 
                            L60, 20 z" 
					                 Fill="{Binding Path=ArrowBrush}"  					                  
					                 Height="{Binding Path=ArrowHeight}"
                      HorizontalAlignment="Left"
                      RenderTransformOrigin="0.5,0.5"
					                 Stretch="Fill" 
					                 UseLayoutRounding="False" 
					                 VerticalAlignment="Top" 
					                 Width="{Binding Path=ArrowWidth}"
					                 x:Name="LeftArrow">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="90" />
                            <ScaleTransform ScaleX="-1" />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>

                <!-- Joystick 'shaft'. -->
                <Rectangle Canvas.Left="160" 
						                     Canvas.Top="170" 						                      
						                     Height="20" 
						                     RadiusX="10" 
						                     RadiusY="10"
                           Width="20"
						                     x:Name="Shaft">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0, 0.5" EndPoint="1, 0.5">
                            <GradientStop Color="Black" Offset="0.0" />
                            <GradientStop Color="White" Offset="0.5" />
                            <GradientStop Color="Black" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Joystick 'knob'. -->
                <Canvas Canvas.Left="125" 
				                    Canvas.Top="125"  
                        Height="0"
                        HorizontalAlignment="Left"
				                    VerticalAlignment="Top" 				                     
				                    Width="0" 				                     
				                    RenderTransformOrigin="0.5,0.5"
                        x:Name="Knob">
                    
                    <!-- Knob Shadow -->
                    <Ellipse Canvas.Left="22" 
				                         Canvas.Top="18" 
                             Fill="#52131212"
                             Height="88"
				                         HorizontalAlignment="Left" 				                          
				                         VerticalAlignment="Top" 
				                         Width="86" 				                          
                             x:Name="Shadow" /> 
                    
                    <!-- Knob 'ball' -->
                    <Ellipse Canvas.Top="1" 
                             Height="90"
				                         HorizontalAlignment="Left" 
				                         RenderTransformOrigin="0.5,0.5"
				                         VerticalAlignment="Top" 
				                         Width="90" 				                            
				                         x:Name="KnobBase">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF8A8A8A" />
                                <GradientStop Color="#FF979797" Offset="1" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Ellipse Canvas.Left="0.613" 
				                         Canvas.Top="1.692"
                             d:LayoutRounding="Auto"
                             Height="74.313" 
                             HorizontalAlignment="Left" 
				                         RenderTransformOrigin="0.5,0.5"
                             UseLayoutRounding="False"
				                         VerticalAlignment="Top" 
				                         Width="82.189">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#C0828080" Offset="0.797" />
                                <GradientStop Color="#FD000000" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="-28.434" />
                                <SkewTransform AngleX="-2.144" />
                                <TranslateTransform X="-1.199" Y="0.649" />
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <Ellipse Canvas.Left="12.396" 
				                         Canvas.Top="5.057"
                             d:LayoutRounding="Auto"
                             Height="75.491" 
                             HorizontalAlignment="Left" 
                             RenderTransformOrigin="0.5,0.5" 
                             UseLayoutRounding="False"
				                         VerticalAlignment="Top"
				                         Width="70.887">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#00858585" Offset="0" />
                                <GradientStop Color="#1AFFFFFF" Offset="1" />
                                <GradientStop Color="#3FC2C2C2" Offset="0.349" />
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <SkewTransform CenterX="3" CenterY="-4" />
                                <RotateTransform Angle="-.7628" />
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <Ellipse Canvas.Left="0.631" 
                             Canvas.Top="4.896"
                             d:LayoutRounding="Auto"
                             Height="72.722"
                             HorizontalAlignment="Left" 
				                         RenderTransformOrigin="0.5,0.5" 
                             UseLayoutRounding="False"                
				                         VerticalAlignment="Top" 
				                         Width="72.936">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#9A909090" Offset="1" />
                                <GradientStop Color="Gray" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-31.733"></RotateTransform>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <Ellipse Canvas.Left="14.001" 
                             Canvas.Top="11.001"
                             d:LayoutRounding="Auto"
                             Height="37"
                             HorizontalAlignment="Left" 				                        
                             RenderTransformOrigin="0.5,0.5" 
                             UseLayoutRounding="False"
				                         VerticalAlignment="Top" 
				                         Width="39">
                        <Ellipse.RenderTransform>
                            <SkewTransform CenterX="-8"></SkewTransform>
                        </Ellipse.RenderTransform>
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF898989" Offset="0" />
                                <GradientStop Color="#38777777" Offset="1" />
                                <GradientStop Color="#55676767" Offset="0.672" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Reflections -->
                    <Path Canvas.Left="18.166" 
                          Canvas.Top="15.917"
                          Data="M9.74935,11.916 
                                L13.084,15.166 
                                L12.1668,16.833 
                                L11.3333,18.583 
                                L10.4999,20.416 
                                L9.24961,20.833 
                                L6.99967,20.583 
                                L6.75,18.333 
                                L7.66697,15.333 
                                L8.75037,12.916 z 
                                M3.6672,9.74999 
                                L7.084,10.083 
                                L5.75037,12.25 
                                L4.66704,14 
                                L4.33365,16.583
                                L4.25036,18.75 
                                L4.41695,20.5 
                                L0,20.166 
                                L0.16699,16.916 
                                L1.16693,13.833 
                                L2.50016,11.583 z 
                                M18.1671,6.33301 
                                L21.167,6.33301 
                                L21.667,8.5 
                                L20.75,9.75 
                                L18.5841,10.833 
                                L15.8337,13 
                                L12.584,8.83301 
                                L15.2502,7 z 
                                M20.917,0 
                                L20.917,3.16601 
                                L18.1674,2.99999 
                                L15.8337,3.583 
                                L13.5837,4.833 
                                L11.3337,5.99999 
                                L10.5003,6.416 
                                L8.584,3.833 
                                L11.0842,2.41601 
                                L13.3341,0.833006 
                                L16.417,0.166016 z" 
				                      Fill="#99EEEEEE" 
                          Height="20.833"
				                      HorizontalAlignment="Left" 
				                      Stretch="Fill" 
				                      UseLayoutRounding="False" 
				                      VerticalAlignment="Top" 
				                      Width="21.667" />
                </Canvas>
            </Canvas>
        </Grid>
    </Viewbox>
</UserControl>